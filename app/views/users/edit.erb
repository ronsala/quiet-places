<h2><%= @user.username %> </h2>
<% if current_user.id == @user.id || current_user.is_admin %>
  <p><%= @user.email %></p>
<% end %>

<form action="/users/<%= @user.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p>Username: <input type="text" name="username" value="<%= @user.username %>"></p>
    <% if flash[:user] %>
      <p><strong><%= flash[:user] %></strong></p>
    <% end %>
  <p>Email: <input type="text" name="email" value="<%= @user.email %>"></p>
    <% if flash[:email] %>
      <p><strong><%= flash[:email] %></strong></p>
    <% end %>
  <p>New Password: <input type="password" name="password"></p>
    <% if flash[:password] %>
      <p><strong><%= flash[:password] %></strong></p>
    <% end %>
  <p>Retype New Password: <input type="password" name="password_confirm"></p>
    <% if flash[:match] %>
      <p><strong><%= flash[:match] %></strong></p><br>
    <% end %>
  <br>
  <p><em>Are you not currently an admin and have an admin key? Enter it here: <input type="text" name="admin_key"></p>
    <% if flash[:admin_mismatch] %>
      <p><strong><%= flash[:admin_mismatch] %></strong></p><br>
    <% end %>
  <br>
  <input class="button" type="submit">
</form><br>